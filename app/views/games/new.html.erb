<div class="wrapper">
  <h1>New game</h1>
  <% @letters.each do |letter| %>
    <div class="box-letter"><span><%= letter %></span></div>
  <% end %>

  <div class="answer">
    <p>What is the longest word you can find?</p>

    <form action="/score" method="post" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <%= hidden_field_tag :start_time, @start_time %>
      <input type="text" name="attempt" placeholder="Your word">
      <button type="submit" class="btn btn-primary">Play</button>
    </form>
  </div>
</div>
